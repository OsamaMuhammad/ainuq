<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ainuq" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryDark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="n">true</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/gotham_book</item>

<!--        <item name="android:windowBackground">@color/screenColor</item>-->
        <item name="android:colorBackground">@color/screenColor</item>
    </style>



    <!-- PrimaryColor Tinted Icon. It is applied on ImageView -->
    <style name="imageIcon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>


    <!-- PrimaryColor Tinted Small Icon. It is applied on ImageView -->
    <style name="imageIcon.Small">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- PrimaryColor Tinted Medium Icon. It is applied on ImageView -->
    <style name="imageIcon.Medium">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- PrimaryColor Tinted Large Icon. It is applied on ImageView -->
    <style name="imageIcon.Large">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="editText.Credentials" parent="Widget.AppCompat.EditText">
        <item name="maxLines">1</item>
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textColor">@android:color/tertiary_text_light</item>
    </style>


    <style name="flatButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textView.Link" parent="Widget.AppCompat.TextView">
        <item name="android:linksClickable">true</item>
        <item name="android:padding">16dp</item>
    </style>


    <style name="textMedium">
        <item name="fontFamily">@font/gotham_medium</item>
    </style>

    <style name="textBook">
        <item name="fontFamily">@font/gotham_book</item>
    </style>

    <style name="textBold">
        <item name="fontFamily">@font/gotham_bold</item>
    </style>

    <style name="textBlack">
        <item name="fontFamily">@font/gotham_black</item>
    </style>

    <style name="textMedium.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textMedium.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textMedium.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textMedium.Large">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="textBook.Caption" >
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textBook.Small" >
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textBook.Medium" >
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textBook.Large">
        <item name="android:textSize">20sp</item>
    </style>



    <style name="textBold.Caption" >
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textBold.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textBold.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textBold.Large" >
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textBold.Large2" >
        <item name="android:textSize">24sp</item>
    </style>


    <style name="textBlack.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textBlack.Small" >
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textBlack.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textBlack.Large">
        <item name="android:textSize">20sp</item>
    </style>



    <style name="outlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/secondary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textAppearance">@style/textMedium.Small</item>
    </style>


    <style name="textButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textAppearance">@style/textMedium.Small</item>
    </style>





</resources>